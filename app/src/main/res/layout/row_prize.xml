<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_marginBottom="10dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
<TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/titleText"
        style="@style/TitleTextView"
        android:text="prize first 3"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/prizeText"/>
<TextView
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/PrizeTextView"
        android:text="6,000,000"
        android:id="@+id/prizeText"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toEndOf="@+id/titleText"/>

    <kmong.yeonj.thailottery.ExpandableGridView
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:id="@+id/numberView"
            android:layout_gravity="center"
            style="@style/NumbersGridView"
            android:layout_width="match_parent"
            android:numColumns="3"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>